<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_medium">

    <ImageView
        android:id="@+id/stream_thumbnail"
        android:layout_width="@dimen/stream_item_image_width_small"
        android:layout_height="@dimen/stream_item_image_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView android:id="@+id/stream_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/stream_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_xsmall"/>



    <TextView android:id="@+id/stream_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/stream_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/stream_user"
        android:layout_margin="@dimen/margin_xsmall"/>

